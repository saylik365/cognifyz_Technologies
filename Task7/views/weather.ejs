<!-- âœ… Bootstrap CSS & Icons -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet">

<style>
  body {
    background: linear-gradient(135deg, #1e3c72 0%, #2a5298 100%);
    font-family: 'Segoe UI', Tahoma, sans-serif;
  }
  .card {
    background: #fff;
    border-radius: 16px;
    padding: 30px;
    box-shadow: 0 8px 20px rgba(0, 0, 0, 0.2);
    animation: fadeIn 0.8s ease-in-out;
    max-width: 500px;
    margin: auto;
  }
  @keyframes fadeIn {
    from { opacity: 0; transform: translateY(20px); }
    to { opacity: 1; transform: translateY(0); }
  }
  .form-control:focus {
    border-color: #2a5298;
    box-shadow: 0 0 8px rgba(42, 82, 152, 0.5);
  }
  .btn-primary {
    background: #2a5298;
    border: none;
    transition: 0.3s;
  }
  .btn-primary:hover {
    background: #1e3c72;
  }
  .btn-secondary {
    border: none;
    transition: 0.3s;
  }
  #weather-result h3 {
    margin-top: 15px;
    font-weight: bold;
    color: #2a5298;
  }
  #weather-result p {
    margin: 5px 0;
    font-size: 1rem;
  }
  #weather-result img {
    margin-top: 10px;
    width: 80px;
  }
</style>

<div class="container vh-100 d-flex justify-content-center align-items-center">
  <div class="card w-100">
    <h1 class="text-center mb-4 text-primary fw-bold"><i class="bi bi-cloud-sun me-2"></i>Weather Info</h1>
    
    <!-- âœ… City Input -->
    <div class="mb-3">
      <input type="text" id="city" class="form-control" placeholder="Enter city name">
    </div>
    
    <!-- âœ… Get Weather Button -->
    <button id="get-weather" class="btn btn-primary w-100 mb-3 fw-bold py-2">
      <i class="bi bi-search me-2"></i>Get Weather
    </button>
    
    <!-- âœ… Weather Result -->
    <div id="weather-result" class="text-center"></div>
    
    <!-- âœ… Back Button -->
    <a href="/submissions" class="btn btn-secondary mt-3 w-100 fw-bold py-2">
      <i class="bi bi-arrow-left-circle me-2"></i>Back to Submissions
    </a>
  </div>
</div>

<script>
document.getElementById('get-weather').addEventListener('click', async () => {
    const token = localStorage.getItem('token');
    if (!token) {
        alert('You must log in first!');
        window.location.href = '/login';
        return;
    }

    const city = document.getElementById('city').value.trim();
    if (!city) {
        alert('Please enter a city name!');
        return;
    }

    const res = await fetch(`/api/weather?city=${city}`, {
        headers: { 'Authorization': `Bearer ${token}` }
    });

    const data = await res.json();
    const resultDiv = document.getElementById('weather-result');

    if (res.ok) {
        resultDiv.innerHTML = `
            <h3><i class="bi bi-geo-alt-fill me-2"></i>${data.name}, ${data.sys.country}</h3>
            <p><strong>${data.weather[0].description}</strong></p>
            <p>ðŸŒ¡ Temp: ${data.main.temp}Â°C | ðŸ’§ Humidity: ${data.main.humidity}%</p>
            <img src="https://openweathermap.org/img/wn/${data.weather[0].icon}@2x.png">
        `;
    } else {
        resultDiv.innerHTML = `<p class="text-danger fw-bold">${data.error}</p>`;
    }
});
</script>
